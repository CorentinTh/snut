    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
